<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Splash activity theme. -->
    <style name="SplashTheme" parent="AppTheme.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Login activity theme. -->
    <style name="LoginTheme" parent="AppTheme.Dark.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <!-- Run activity theme. -->
    <style name="RunActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Event detail activity theme. -->
    <style name="EventDetailTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="secondary_color_button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="accent_color_button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="run_titles">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="run_values">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="workout_result_together_collected">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="workout_result_amount_collected">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="rv_item_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreyDb60</item>
    </style>

    <style name="event_rv_item_date">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/colorGreyDb60</item>
    </style>

    <style name="event_rv_item_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="event_rv_item_subtitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreyDb60</item>
    </style>

    <style name="event_detail_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorGreyDb60</item>
    </style>

    <style name="header_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
